{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "cloudUserPermissions",
      "Effect": "Allow",
      "Action": [
        "ec2:*",
        "elasticloadbalancing:*",
        "autoscaling:*",
        "cloudwatch:*",
        "logs:*",
        "sns:*",
        "events:*",
        "lambda:*",
        "kms:DescribeKey"
      ],
      "Resource": "*"
    },
    {
      "Sid": "IAMPassRoleforServices",
      "Effect": "Allow",
      "Action": [
        "iam:PassRole",
        "iam:CreateRole",
        "iam:CreatePolicy",
        "iam:AttachRolePolicy"
      ],
      "Resource": "*"
    }
  ]
}
